<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView android:id="@+id/title123"

        android:padding="20dip"
        android:textColor="green"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <!--***********************-->
    <!--*** TOOLBAR LAYOUT ****-->
    <!--***********************-->

    <LinearLayout android:id="@+id/toolbar1"
        android:layout_marginBottom="-50dip"
        android:paddingRight="10dp"
        android:background="grey"
        android:weightSum="100"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/description"
            android:textColor="blue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:text="asdasdasdasdasdasdasd"/>

        <ImageView
            android:layout_gravity="right"
            android:layout_weight="31   "
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="50dip"
            android:src="@drawable/pic_article_carpool"/>

    </LinearLayout>
</LinearLayout>