<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="100">


    <EditText
        android:layout_weight="10"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="@string/feedback_username"
        android:enabled="false"
        android:inputType="textPersonName"/>

    <EditText
        android:layout_weight="10"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:hint="@string/feddback_user_email_id"
        android:enabled="false"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_weight="10"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:hint="@string/feedback_department"
        android:enabled="false" />

    <EditText
        android:layout_weight="10"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:hint="@string/feedback_age"
        android:enabled="false" />

    <EditText
        android:layout_weight="20"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="top"
        android:hint="@string/feedback_comment"
        android:fitsSystemWindows="true"
        android:maxEms="250"
        android:inputType="textMultiLine"
        android:padding="5dp" />


    <RatingBar
        android:layout_weight="20"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:numStars="5"
        android:layout_gravity="center_horizontal"
        android:stepSize="0.5"
        android:rating="1.0"/>

    <CheckBox
        android:layout_weight="10"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/feedback_anonymous"/>

    <Button
        android:layout_weight="10"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/raised_button"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/feedback_submit"
        android:textColor="#ffffff" />

</LinearLayout>